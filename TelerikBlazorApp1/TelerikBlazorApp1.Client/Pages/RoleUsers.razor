                    new(18, "Cashier John Doe"),
                    new(19, "Cashier Jane Doe"),
                    new(20, "Insurance Agent John Doe"),
                    new(21, "Insurance Agent Jane Doe"),
                }.AsQueryable();


        }
    }



}

